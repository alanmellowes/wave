<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".savingsActivity"
    android:orientation="vertical"
    android:background="@drawable/feature"
    android:weightSum="10">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Savings"
            android:textColor="@color/black"
            android:textSize="34sp" />
    </RelativeLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp">

        <!--First row -->
        <!--First column -->
        <androidx.cardview.widget.CardView
            android:id="@+id/budget"
            android:onClick="OnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:text = "Payments"
                    android:textAlignment="center"
                    android:textColor = "@color/black"
                    android:textSize = "18sp"
                    android:textStyle = "bold"
                    android:src="@drawable/operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Second row -->
        <!--First column -->
        <androidx.cardview.widget.CardView
            android:id="@+id/todaysActivity"
            android:onClick="OnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:text = "Payments"
                    android:textAlignment="center"
                    android:textColor = "@color/black"
                    android:textSize = "18sp"
                    android:textStyle = "bold"
                    android:src="@drawable/savingspiggy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Second row -->
        <!--First column -->
        <androidx.cardview.widget.CardView
            android:id="@+id/weekActivity"
            android:onClick="OnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:text = "Payments"
                    android:textAlignment="center"
                    android:textColor = "@color/black"
                    android:textSize = "18sp"
                    android:textStyle = "bold"
                    android:src="@drawable/trend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Second row -->
        <!--Second column -->
        <androidx.cardview.widget.CardView
            android:id="@+id/monthActivity"
            android:onClick="OnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:text = "Payments"
                    android:textAlignment="center"
                    android:textColor = "@color/black"
                    android:textSize = "18sp"
                    android:textStyle = "bold"
                    android:src="@drawable/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <!--Third row -->
        <!--First column -->
        <androidx.cardview.widget.CardView
            android:id="@+id/analytics"
            android:onClick="OnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:text = "Payments"
                    android:textAlignment="center"
                    android:textColor = "@color/black"
                    android:textSize = "18sp"
                    android:textStyle = "bold"
                    android:src="@drawable/trend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Third row -->
        <!--Second column -->
        <androidx.cardview.widget.CardView
            android:id="@+id/blankActivity"
            android:onClick="OnClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:text = "Payments"
                    android:textAlignment="center"
                    android:textColor = "@color/black"
                    android:textSize = "18sp"
                    android:textStyle = "bold"
                    android:src="@drawable/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </GridLayout>



</LinearLayout>